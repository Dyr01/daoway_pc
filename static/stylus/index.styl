// 引入文件
@import "mixins.styl"
@import "public.styl"

body
  width 100%
  color: #121212
// banner
  #banner
    position relative
    overflow hidden
    .full-banner
      width 100%
      position relative
      overflow hidden
      ul
        position absolute
        li
          width 100%
          height 420px
          float left
          background  no-repeat center center
      ol
        height 20px
        position absolute
        left 50%
        bottom 30px
        padding 0 10px
        border-radius 10px
        li
          width 10px
          height 10px
          float left
          margin 5px 5px
          background #747474
          border-radius 50%
          cursor pointer
          .current
            background rgba(255,255,255,1)
    .banner-nav
      width 180px
      height 420px
      position absolute
      left 104px
      top 0
      background #757881
      font-size 16px
      text-align center
      font-weight bold
      letter-spacing 2px
      .navname
        height 42px
        line-height 42px
        z-index 10
        .nav-tog
          display inline-block
          height 42px
          width 180px
          position relative
          img
            position absolute
            right 32px
            top 16px
          &:link
            color #fff
          &:hover
            background #5c5f68
          &:visited
            color #fff
        .nav-tog-box
          position absolute
          left 180px
          top 0
          background rgba(255,255,255,0.7)
          width 160px
          height 420px
          overflow: visible;
          display none
          a
            &:link
              color #000000
            &:hover
              color red1
// serves
  #servers
    .servers-wrapper:nth-child(even)
      background #FBF8F8
    .servers-wrapper
      height 566px
      padding 60px 0
      text-align center
      .servers-nav
        width 1200px
        height 77px
        color #3d3838
        position relative
        margin 0 auto
        .servers-index
          font 800 28px "Microsoft YaHei"
        .servers-type
          margin-top 15px
          font-size 22px
        .servers-more
          position absolute
          right 0
          top 66px
          color #898989
          font-size 18px
      .serves-list-wrapper
        height 345px
        width 1200px
        padding-top 30px
        margin 0 auto
        display flex
        justify-content space-between
        .servers-list
          width 230px
          height 345px
          border 1px solid #eaeaea
          padding-top 10px
          &:hover
            box-shadow 5px 5px 15px #ccc
          .servers-list-img
            width 210px
            height 210px
            margin 0 5px
          .servers-list-Name
            padding 10px 10px
            height 28px
            color #121212
            font-weight 800
            text-align start
          .servers-list-description
            padding 5px 10px
            width 100%
            height 58px
            font-size 13px
            line-height 18px
            text-overflow ellipsis
            color #929292
            text-align start
          .servers-list-price
            padding 0 15px
            font-size 14px
            color red1
            font-weight bold
            text-align start
            :first-child
              font-size 20px
            :last-child
              padding 6px 10px
              float right
              color #ffffff
              background red1
              border-radius 8px