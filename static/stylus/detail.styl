// 引入文件
@import "mixins.styl"
@import "public.styl"
body
  width 100%
  color: #121212
// 服务详情
  #detail
    background #f8f8f8
    .detail-wrapper
      width 1200px
      margin 0 auto
      overflow hidden
      .detail-des
        margin 30px auto 30px
        color #121212
        font 700 18px "Microsoft YaHei"
        .detail-des-type
          color #121212
      .detail-list
        margin-top 10px
        overflow hidden
        .detail-list-left
          float left
          width 960px
          clear-fixed()
          overflow hidden
          .left-top
            width 980px
            height 220px
            border solid 1px #e5e5e5
            background #fff
            img
              width 158px
              height 158px
              margin 30px
              float left
              clear-fixed()
            .left-list-des
              display flex
              height 140px
              width 418px
              float left
              font-size 14px
              clear-fixed()
              margin 35px 0
              justify-content space-between
              flex-direction: column
              span:first-child
                font-size 18px
              .new-price
                :first-child
                  font bold 18px "微软雅黑"
                  color red1
                :nth-child(2)
                  color red1
                  font-weight bold
                :nth-child(3)
                  color #757881
                :last-child
                  color #757881
                  text-decoration line-through
              .detail-youhui
                display inline-block
                width 88px
                height 24px
                font-size 12px
                color red1
                text-align center
                line-height 20px
                border 1px solid red1
                border-radius 8px

              span:last-child
                :last-child
                  color red1
            .detail-erweima
              float right
              clear-fixed()
              margin 30px 80px 0 0
              text-align center
              img
                width 115px
                height 115px
                margin 0
              p
                font-size 16px
                font-weight bold
                line-height 30px
                &:last-child
                  color red1
          .left-bottom
            width 960px
            padding 30px 20px
            margin-top 10px
            border solid 1px #e5e5e5
            background #fff
            font-size 14px
            .left-bottom-title
              width 66px
              padding 5px
              margin-top 10px
              border-bottom 3px solid red1
              font-weight 700
            p
              line-height 30px
              margin-top 15px
        .detail-list-right
          width 230px
          margin-left 10px
          float left
          background #ffffff
          .right-top
            height 356px
            border solid 1px #e5e5e5
            .right-des
              height 60px
              padding-left 10px
              padding-top 20px
              color #121212
              font 700 20px "Microsoft YaHei"
              border-bottom 1px solid #e5e5e5
            .right-list-ser
              text-align center
              img
                width 80px
                height 80px
                margin 30px auto 10px
              .right-list-name
                height 42px
                line-height 42px
                font bold 18px "微软雅黑"
                color #121212
                margin-bottom 20px
              .right-list-x
                text-align start
                padding 10px
                color #121212
                span
                  float right
                  clear-fixed()
                  color red1

          .right-bottom
            width 230px
            height 290px
            background url(../image/tuijianfuwushang_06.jpg) no-repeat center
            text-align center
            line-height 330px
            margin-top 10px
            img
              width 130px
              height 130px